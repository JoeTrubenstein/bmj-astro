---
import { Image } from "astro:assets";
import youtube from "@config/youtube.json";
---

<section class="max-w-screen-lg px-4 mx-auto pb-12 sm:px-6 lg:px-8">
  <h3
    class="mt-3 text-lg md:text-2xl font-semibold leading-6 text-zinc-900 dark:text-white group-hover:text-zinc-600 mb-4"
  >
    My YouTube Channel:
  </h3>
  <ul
    class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-4 lg:mx-0 lg:max-w-none lg:grid-cols-3 text-white"
  >
    {
      youtube?.slice(0, 3).map((item) => (
        <li>
          <a
            href={`https://www.youtube.com/watch?v=${item.videoId}`}
            target="_blank"
            class="block overflow-hidden"
          >
            <figure>
              <Image
                alt={item.title}
                src={`https://i.ytimg.com/vi/${item.videoId}/maxresdefault.jpg`}
                class="h-auto w-full object-cover rounded-lg"
                width={960}
                height={480}
                decoding="async"
              />
            </figure>
            <div class="">
              <p class="mt-5 line-clamp-3 text-md leading-6 text-zinc-600">{item.title}</p>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</section>
