---
import HomePagination from "@components/HomePagination.astro";
import Base from "@layouts/Base.astro";
import Posts from "@layouts/Posts.astro";

import { ghostClient } from '../lib/ghost';
const posts = await ghostClient.posts
    .browse({
        limit: 'all',
        include:'tags',
    })
    .catch((err) => {
        console.error(err);
    });
---

<Base>
  <Posts posts={posts} />
  <HomePagination />
</Base>
