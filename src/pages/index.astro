import { ghostClient } from '../lib/ghost';
const posts = await ghostClient.posts
    .browse({
        limit: 'all',
        include:'tags',
    })
    .catch((err) => {
        console.error(err);
    });

---

<Base>
  <Posts posts={posts} />
  <HomePagination />
</Base>
