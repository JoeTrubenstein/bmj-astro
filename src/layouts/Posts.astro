---
import { Image } from "astro:assets";
import FormattedDate from "@components/FormattedDate.astro";
import config from "@config/config.json";
import { slugify } from "@utils/slug";
import type { Post, Tag } from "@ts-ghost/content-api";
const { posts } = Astro.props;
---
<div
  class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-3"
>
  {
    posts?.slice(0, config.site.pageSize).map((post: Post) => (
      <article class="flex w-full flex-col items-start">
        <div class="rounded-lg block overflow-hidden mb-4">
          {post.feature_image && (
            <figure class="w-auto h-auto md:h-[150px] object-cover">
              <a href={`/${post.slug}/`}>
              <Image
                class="transition duration-300 ease-in-out hover:scale-110"
                src={post.feature_image}
                alt={post.feature_image_alt || "a decorative feature image"}
                width={960}
                height={480}
                decoding="async"
                loading="lazy"
              />
            </a>
            </figure>
          )}
        </div>
        <div class="flex items-center gap-x-4 text-xs text-zinc-900 dark:text-white">
          <FormattedDate date={post.published_at} />
          {post.tags?.slice(0, 2).map((tag: Tag) => (
            <a
              href={`/tags/${slugify(tag.name)}`}
              class="capitalize text-md relative z-10 rounded-lg bg-zinc-50 px-3 py-1.5 font-medium text-zinc-600 hover:bg-zinc-50 dark:bg-zinc-900 dark:text-zinc-400"
            >
              {tag.name}
              {console.log(tag.name)}
            </a>
          ))}
        </div>
        <div class="relative">
          <h2 class="mt-3 text-xl font-semibold leading-6 text-zinc-900 dark:text-white group-hover:text-zinc-600">
            <a href={`/${post.slug}/`}>
              <span class="absolute inset-0" />
              {post.title}
            </a>
          </h2>
          <p class="mt-5 line-clamp-3 text-sm leading-6 text-zinc-600">
            {post.excerpt}
          </p>
        </div>
      </article>
    ))
  }
</div>
